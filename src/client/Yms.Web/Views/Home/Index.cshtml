            },
            step: 5,
            start: [1000, 5000],
            margin: 300,
            connect: true,
            direction: 'ltr',
            orientation: 'horizontal',
            behaviour: 'tap-drag',
            tooltips: true,
            format: {
                to: function (value) {
                    return Math.floor(value) + " ₺";
                },
                from: function (value) {
                    return value.replace('', '');
                }
            }
        });
    </script>
